{
  "version": 2,
  "builds": [
    {
      "src": "artemis-pos-controller-back-end/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "artemis-pos-controller-front-end/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "artemis-pos-controller-back-end/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "artemis-pos-controller-front-end/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "artemis-pos-controller-front-end/index.html"
    }
  ]
}
